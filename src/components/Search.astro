---
import "@pagefind/default-ui/css/ui.css";
---

<div class="search-wrapper">
    <button id="search-toggle" aria-label="Search">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
    </button>
    <div id="search-container">
        <div id="search"></div>
    </div>
</div>

<script>
    import { PagefindUI } from "@pagefind/default-ui";

    window.addEventListener("DOMContentLoaded", (event) => {
        new PagefindUI({
            element: "#search",
            bundlePath:
                import.meta.env.BASE_URL.replace(/\/$/, "") + "/pagefind/",
            showSubResults: true,
            showImages: false,
            translations: {
                placeholder: "Αναζήτηση...",
                clear_search: "Καθαρισμός",
                load_more: "Φόρτωση περισσότερων αποτελεσμάτων",
                search_label: "Αναζήτηση σε αυτό το site",
                filters_label: "Φίλτρα",
                zero_results: "Δεν βρέθηκαν αποτελέσματα για [SEARCH_TERM]",
                many_results: "[COUNT] αποτελέσματα για [SEARCH_TERM]",
                one_result: "[COUNT] αποτέλεσμα για [SEARCH_TERM]",
                alt_search:
                    "Μήπως εννοούσατε: [SEARCH_TERM] - ([COUNT] αποτελέσματα)",
            },
        });

        const toggle = document.getElementById("search-toggle");
        const container = document.getElementById("search-container");

        if (toggle && container) {
            toggle.addEventListener("click", (e) => {
                e.stopPropagation();
                container.classList.toggle("visible");
                if (container.classList.contains("visible")) {
                    setTimeout(() => {
                        const input = container.querySelector("input");
                        if (input) input.focus();
                    }, 100);
                }
            });

            document.addEventListener("click", (e) => {
                if (
                    !container.contains(e.target as Node) &&
                    !toggle.contains(e.target as Node)
                ) {
                    container.classList.remove("visible");
                }
            });
        }
    });
</script>

<style is:global>
    .search-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    #search-toggle {
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-color);
        padding: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s;
    }

    #search-toggle:hover {
        color: var(--accent);
    }

    #search-container {
        display: none;
        position: absolute;
        top: 100%; /* Below the header (assuming header is relative) */
        right: 0;
        width: 300px;
        background-color: var(--bg-color);
        border: 1px solid var(--card-border);
        border-radius: 8px;
        padding: 1rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        margin-top: 1rem; /* Offset from header bottom */
    }

    #search-container.visible {
        display: block;
    }

    /* Mobile adjustment */
    @media (max-width: 768px) {
        #search-container {
            position: fixed;
            top: 70px; /* Adjust based on header height */
            left: 1rem;
            right: 1rem;
            width: auto;
        }
    }

    /* Pagefind Overrides */
    :root {
        --pagefind-ui-scale: 0.8;
        --pagefind-ui-primary: #3b82f6;
        --pagefind-ui-text: var(--text-color);
        --pagefind-ui-background: var(--bg-color);
        --pagefind-ui-border: var(--card-border);
        --pagefind-ui-tag: var(--card-border);
        --pagefind-ui-border-width: 1px;
        --pagefind-ui-border-radius: 8px;
        --pagefind-ui-image-border-radius: 8px;
        --pagefind-ui-image-box-ratio: 3 / 2;
        --pagefind-ui-font: "Segoe UI", sans-serif;
    }

    #search .pagefind-ui__search-input {
        background-color: var(--bg-color-alt);
        color: var(--text-color);
        border: 1px solid var(--card-border);
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        background-image: none; /* Explicitly remove icon */
        padding-left: 1rem; /* Reset padding */
    }

    #search .pagefind-ui__search-input:focus {
        border-color: #3b82f6;
        outline: none;
    }

    #search .pagefind-ui__search-clear {
        background-color: transparent;
        color: var(--text-muted);
        padding: 0;
        margin-right: 10px;
    }

    #search .pagefind-ui__drawer {
        background-color: var(--bg-color);
        box-shadow: none; /* Container has shadow */
        border: none;
        position: static; /* Inside container */
        width: 100%;
        max-height: 300px;
        overflow-y: auto;
        margin-top: 0.5rem;
    }

    #search .pagefind-ui__result {
        border-bottom: 1px solid var(--gray-light);
        padding: 10px 0;
    }

    #search .pagefind-ui__result:last-child {
        border-bottom: none;
    }

    #search .pagefind-ui__result-link {
        color: var(--text-color);
        font-weight: 600;
        text-decoration: none;
    }

    #search .pagefind-ui__result-link:hover {
        text-decoration: underline;
    }

    #search .pagefind-ui__result-excerpt {
        color: var(--text-muted);
        font-size: 0.85rem;
        line-height: 1.4;
        margin-top: 4px;
    }

    /* Hide the "Search this site" label */
    #search .pagefind-ui__search-label {
        display: none;
    }
</style>
