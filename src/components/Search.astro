---
import '@pagefind/default-ui/css/ui.css';
---

<div id="search" class="ml-3"></div>

<script>
	window.addEventListener('DOMContentLoaded', (event) => {
		new PagefindUI({
			element: '#search',
			showSubResults: true,
            translations: {
                placeholder: "Αναζήτηση...",
                clear_search: "Καθαρισμός",
                load_more: "Περισσότερα αποτελέσματα",
                search_label: "Αναζήτηση σε αυτό το site",
                filters_label: "Φίλτρα",
                zero_results: "Δεν βρέθηκαν αποτελέσματα για [SEARCH_TERM]",
                many_results: "[COUNT] αποτελέσματα για [SEARCH_TERM]",
                one_result: "[COUNT] αποτέλεσμα για [SEARCH_TERM]",
                alt_search: "Δεν βρέθηκαν αποτελέσματα για [SEARCH_TERM]. Μήπως εννοούσατε [DIFFERENT_TERM];",
                search_suggestion: "Δεν βρέθηκαν αποτελέσματα για [SEARCH_TERM]. Δοκιμάστε μία από τις παρακάτω αναζητήσεις:",
                searching: "Αναζήτηση για [SEARCH_TERM]..."
            }
		});
	});
</script>

<style is:global>
    /* Ensure the search container has dimensions */
    #search {
        min-width: 200px;
        min-height: 40px;
        display: flex;
        align-items: center;
    }
    
    /* Pagefind Overrides */
    :root {
        --pagefind-ui-scale: 0.75;
        --pagefind-ui-primary: #3b82f6;
        --pagefind-ui-text: var(--text-color);
        --pagefind-ui-background: var(--card-bg);
        --pagefind-ui-border: var(--card-border);
        --pagefind-ui-tag: var(--card-border);
        --pagefind-ui-border-width: 1px;
        --pagefind-ui-border-radius: 8px;
        --pagefind-ui-image-border-radius: 8px;
        --pagefind-ui-image-box-ratio: 3 / 2;
        --pagefind-ui-font: 'Segoe UI', sans-serif;
    }

    #search .pagefind-ui__search-input {
        background-color: var(--bg-color);
        color: var(--text-color);
        border: 1px solid var(--card-border);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        width: 200px;
        transition: all 0.3s;
    }

    #search .pagefind-ui__search-input:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        outline: none;
    }

    #search .pagefind-ui__search-clear {
        background-color: transparent;
        color: var(--text-muted);
    }
    
    #search .pagefind-ui__drawer {
        background-color: var(--card-bg);
        backdrop-filter: blur(12px);
        border: 1px solid var(--card-border);
        border-radius: 12px;
        padding: 1rem;
        position: absolute;
        right: 0;
        top: 120%; /* Push it down a bit */
        width: 350px;
        max-height: 500px;
        overflow-y: auto;
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
        z-index: 1001;
    }

    #search .pagefind-ui__result-link {
        color: var(--text-color);
        font-weight: 600;
    }

    #search .pagefind-ui__result-excerpt {
        color: var(--text-muted);
        font-size: 0.9rem;
    }
</style>
