---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import { BASE_URL } from "../consts";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const base = BASE_URL === "/" ? "" : BASE_URL;

const breadcrumbItems = [
	{ label: "Αρχική", href: `${base}/` },
	{ label: "Νέα", href: `${base}/blog` },
	{ label: title },
];
---

<BaseLayout title={title} description={description}>
	<main>
		<article>
			<div class="breadcrumb-container animate-fade-in-up">
				<Breadcrumb items={breadcrumbItems} />
			</div>
			<div class="hero-image animate-fade-in-up">
				{
					heroImage && (
						<img width={1020} height={510} src={heroImage} alt="" />
					)
				}
			</div>
			<div class="prose animate-fade-in-up delay-100">
				<div class="title">
					<div class="date">
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on{" "}
									<FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
					<h1>{title}</h1>
					<hr />
				</div>
				<div class="content animate-fade-in-up delay-200">
					<slot />
				</div>
			</div>
		</article>
	</main>

	<style>
		main {
			width: calc(100% - 2em);
			max-width: 100%;
			margin: 0;
			padding-top: 100px; /* Space for fixed navbar */
		}
		.hero-image {
			width: 100%;
		}
		.hero-image img {
			display: block;
			margin: 0 auto;
			border-radius: 12px;
			box-shadow: var(--box-shadow);
		}
		.prose {
			width: 720px;
			max-width: calc(100% - 2em);
			margin: auto;
			padding: 1em;
			color: rgb(var(--gray-dark));
		}
		.title {
			margin-bottom: 1em;
			padding: 1em 0;
			text-align: center;
			line-height: 1;
		}
		.title h1 {
			margin: 0 0 0.5em 0;
		}
		.date {
			margin-bottom: 0.5em;
			color: rgb(var(--gray));
		}
		.last-updated-on {
			font-style: italic;
		}
		.breadcrumb-container {
			width: 720px;
			max-width: calc(100% - 2em);
			margin: 0 auto;
			padding: 1em 1em 0;
		}
	</style>
</BaseLayout>
